{
  "name": "try-monorepo",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "https://github.com/wizardzloy/try-monorepo.git",
  "author": "Vladimir Guguiev <wizardzloy@gmail.com>",
  "license": "MIT",
  "scripts": {
    "commit": "git-cz",
    "build": "lerna run build",
    "release:verify-branch": "git rev-parse --abbrev-ref HEAD | grep -Fxq 'master'",
    "release:bump": "lerna-semantic-release pre",
    "release:changelog:generate": "lerna-semantic-release post",
    "release:changelog:commit": "git add packages/**/CHANGELOG.md && (git commit -nm 'chore(release): Update CHANGELOG files' || echo 'No updates in CHANGELOG files')",
    "release:changelog": "npm run release:changelog:generate && npm run release:changelog:commit",
    "release:publish": "lerna-semantic-release perform",
    "release": "npm run release:verify-branch && npm run release:bump && npm run release:changelog && npm run release:publish"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.19.0",
    "babel-preset-es2015": "^6.18.0",
    "commitizen": "^2.8.6",
    "cz-lerna-changelog": "^0.3.0",
    "lerna": "2.0.0-beta.30",
    "lerna-semantic-release": "^8.0.2",
    "rimraf": "^2.5.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-lerna-changelog"
    }
  },
  "dependencies": {
    "cross-env": "^3.1.3"
  }
}
